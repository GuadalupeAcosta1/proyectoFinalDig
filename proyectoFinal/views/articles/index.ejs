    </div>

    <div class="container">


        <div class="container_slider">
            <div class="control prev">
                <img src="/public/images/arrowleft.png" alt="" width="40px">
            </div>
            <div class="slider">
                <div class="picturesmenu">
                    <% articles.forEach(article=>{%>
                        <a href="articles/<%= article.slug %>">
                            <div class="card" style="width: 15rem; height: 28rem;">
                                <img src="<%= article.image %>" class="card-img-top" alt="...">
                                <div class="card-body" style="width: 15rem; height: 12rem;">
                                    <h4 class="card-title">
                                        <%= article.title %>
                                    </h4>
                                    <h6 class="card-subtitle">
                                        <%= article.markdown %>
                                    </h6>

                                </div>
                            </div>
                        </a>
                        <% }); %>
                </div>
            </div>
            <div class="control next">
                <img src="/public/images/arrowright.png" alt="" width="40px">
            </div>


        </div>




    </div>
    </div>


    </div>


</body>

<footer>
